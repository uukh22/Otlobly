@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/site4.css">
</head>
<body class="img" style="background-image:url(../../../../wwwroot/Images/bg.jpg);">
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">@ViewData["Title"]</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-7 col-lg-5">
                    <div class="login-wrap">
                        <h3 class="text-center mb-4">Create Your Account</h3>
                        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data" class="signup-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.Name">Full Name</label>
                                <input asp-for="Input.Name" class="form-control" placeholder="John Doe">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.Email">Email Address</label>
                                <input asp-for="Input.Email" class="form-control" placeholder="johndoe@gmail.com">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.Password">Password</label>
                                <input asp-for="Input.Password" id="password" type="password" class="form-control" placeholder="Password">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.ConfirmPassword">Confirm Password</label>
                                <input asp-for="Input.ConfirmPassword" id="password-confirm" type="password" class="form-control" placeholder="Confirm Password">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.City">City</label>
                                <input asp-for="Input.City" class="form-control" placeholder="City">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.Address">Address</label>
                                <textarea asp-for="Input.Address" class="form-control" placeholder="Address"></textarea>
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.PostalCode">Postal Code</label>
                                <input asp-for="Input.PostalCode" class="form-control" placeholder="Postal Code">
                            </div>
                            <div class="form-group mb-3">
                                <label class="label" asp-for="Input.ProfilePicture" class="control-label">Profile Picture</label>
                                <input asp-for="Input.ProfilePicture" type="file" class="form-control" accept=".jpg,.jpeg,.png,.gif" />
                                <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Register</button>
                            </div>
                        </form>
                        <p>I'm already a member! <a data-toggle="tab" href="@Url.Page("./Login", new { ReturnUrl = Model.ReturnUrl })">Sign In</a></p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
</body>
</html>
