@model Otlobly.ViewModels.CardOrderViewModel


<section class="h-100" style="background-color :#eee;">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-10">

                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h3 class="fw-normal mb-0 text-black"> Shopping Cart </h3>
                </div>

                @{
                    if (Model.ListOfCard.Count > 0)
                    {
                        <form method="post">
                            <br />
                            <div class="container">
                                <div class="card">
                                    <div class="card-header bg-primary text-light ml-0">
                                        <div class="row">
                                            <div class="col-6  pt-2">
                                                <i class="bi bi-cart3"></i>&nbsp;
                                                Shopping Cart
                                            </div>
                                            <div class="col-6 text-end">
                                                <a asp-area="Customer" asp-controller="Home" asp-action="Index" class="btn btn-outline-info btn-sm">Continue Shopping</a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="card-body">
                                        @foreach (var item in Model.ListOfCard)
                                        {
                                            <div class="row">
                                                <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                                    @{
                                                        var base64 = Convert.ToBase64String(item.Item.Image);
                                                        var imgsrc = String.Format("data:image/jpeg;base64,{0}", base64);
                                                    }
                                                    <img src="@imgsrc" height="70" width="70" />
                                                </div>
                                                <div class="col-12 col-lg-6 pt-md-3">
                                                    <h5><strong>@item.Item.Title</strong></h5>
                                                    <p><small>@Html.Raw(item.Item.Description)</small></p>
                                                </div>
                                                <div class="col-12  col-lg-5 text-center row">
                                                    <div class="col-4 text-md-right pt-4">
                                                        <h6>
                                                            <strong>
                                                                @item.Item.Price.ToString("c")
                                                                <span class="text-muted">&nbsp;x&nbsp;</span>@item.count
                                                            </strong>
                                                            <div class="pt-2">
                                                                Total:&nbsp;<strong> @((item.Item.Price * item.count).ToString("c"))</strong>
                                                            </div>
                                                        </h6>
                                                    </div>
                                                    <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                                        <div class="w-75 btn-group" role="group">
                                                            <a asp-action="Plus" asp-route-Id="@item.Id" class="btn btn-primary">
                                                                <i class="bi bi-plus-square"></i>
                                                            </a> &nbsp;
                                                            <a asp-action="Minus" asp-route-Id="@item.Id" class="btn btn-warning">
                                                                <i class="bi bi-dash-square"></i>
                                                            </a>
                                                        </div>

                                                    </div>
                                                    <div class="col-2 col-sm-4 col-lg-2 text-right pt-2">
                                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                                                            <i class="bi bi-trash-fill"></i>
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <hr />
                                        }
                                        <div class="row">
                                            <div class="col-12 col-md-6 offset-md-6 col-lg-4 offset-lg-8 pr-4">
                                                <ul class="list-group">
                                                    <li class="list-group-item d-flex justify-content-between bg-light">
                                                        <span class="text-info"> Total </span>
                                                        <strong class="text-info">@Model.OrderHeader.OrderTotal.ToString("c")</strong>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="card-footer">
                                        <div class="card-footer row">
                                            <div class="col-sm-12 col-lg-4 col-md-6 offset-lg-8 offset-md-6 ">
                                                <a asp-action="Summary" asp-controller="Cart" class="btn btn-success form-control">Summary</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>


                    }
                    else
                    {
                        <div class="alert alert-danger">
                            No items added to the shopping cart...
                        </div>
                    }
                }

            </div>
        </div>
    </div>
</section>