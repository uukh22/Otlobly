@{
    ViewData["Title"] = "Admin Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <title>@ViewData["Title"] - Otlobly</title>

    <!-- Include CSS Files -->
    <link rel="stylesheet" type="text/css" href="~/css/bootstrap.css" />
    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="~/css/style1.css" rel="stylesheet" />

    <!-- Custom Styles -->
    <style>
        h2 {
            color: wheat;
        }

        .btn-create {
            margin-bottom: 30px;
            width: 100%;
            background-color: #007bff;
            color: white;
        }

        .btn {
            border-radius: 50px;
            margin: 5px;
            display: inline-block;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-primary:hover,
            .btn-info:hover,
            .btn-danger:hover {
                opacity: 0.8;
            }

        .table {
            margin-top: 20px;
        }

            .table th,
            .table td {
                vertical-align: middle;
                text-align: center;
                color: white;
            }

            .table img {
                border-radius: 10px;
            }

        .d-flex {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .mr-2 {
            margin-right: 10px;
        }

        .order_online {
            background-color: #007bff;
            color: white;
            padding: 5px 15px;
            border: none;
            border-radius: 50px;
            cursor: pointer;
        }

        .hero_area {
            position: relative;
            z-index: 1;
        }

        .bg-box {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
            z-index: -1;
        }

            .bg-box img {
                width: 100%;
                height: 100%;
                object-fit: cover;
            }

        .header_section {
            position: relative;
            z-index: 1;
        }

        .custom_nav-container {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .heading_container {
            margin-bottom: 50px;
        }

        .heading_center {
            text-align: center;
        }
    </style>
</head>
<body>
    <section class="hero_area">
        <div class="bg-box">
            <img src="~/images/hero-bg.jpg" alt="">
        </div>
        <!-- header section starts -->
        <header class="header_section">
            <div class="container">
                <nav class="navbar navbar-expand-lg custom_nav-container">
                    <a class="navbar-brand" href="~/">
                        <span>Otlobly</span>
                    </a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class=""></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Coupon" asp-action="Index">Coupon</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Categories" asp-action="Index">Category</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="SubCatgories" asp-action="Index">SubCategories</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Item" asp-action="Index">Item</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="User" asp-action="Index">Roles</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index">Orders</a>
                            </li>
                        </ul>
                        <div class="user_option">
                            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" class="form-inline">
                                <button type="submit" class="order_online">Logout</button>
                            </form>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

        <section class="food_section" id="ss">
            <div class="container">
                <div class="heading_container heading_center">
                    <h2>Admin Page</h2>
                </div>
                <!-- Your admin page content goes here -->
            </div>
        </section>
    </section>

            @RenderBody()
    

    <!-- Include JavaScript Files -->
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.js"></script>
    <script src="~/js/custom.js"></script>
</body>
</html>
